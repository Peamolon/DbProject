<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Joind date</th>
      <th>Health care</th>
      <th>Payroll</th>
      <th>Novelty</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.full_name %></td>
        <td><%= employee.joind_date %></td>
        <td><%= employee.health_care %></td>
        <td><%= employee.payroll_id %></td>
        <td><%= employee.novelty_id %></td>
        <td><%= employee.user_id %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

