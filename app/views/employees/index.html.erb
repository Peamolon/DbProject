<p id="notice"><%= notice %></p>
<% if current_user.employee_id.blank? %>
  <h1>Termina de crear tu cuenta para acceder a las vistas</h1>
  <%= link_to 'Create my employee profile', new_employee_path, class: "button is-primary" %>
<%else %>
  <h1>Employees</h1>
  <table>
    <thead>
      <tr>
        <th>Full name</th>
        <th>Join date</th>
        <th>Health care</th>
        <th>Payroll</th>
        <th>Novelty</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.full_name %></td>
          <td><%= employee.join_date %></td>
          <td><%= employee.health_care %></td>
          <td><%= employee.payroll_id %></td>
          <td><%= employee.novelty_id %></td>
          <td><%= employee.user_id %></td>
          <td><%= link_to 'Show', employee %></td>
          <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Employee', new_employee_path %>
<%end%>
