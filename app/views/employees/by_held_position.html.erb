<div class="container has-text-centered">
  <p id="notice"><%= notice %></p>
  <h1>Employees</h1>
  <div class="is-inline-block">
    <div>
      <%= link_to 'Generate PDF', employees_dependency_path(format: :pdf), class: 'button is-normal is-link is-light'%>
    </div>
  </div>
  <div class="control has-icons-left has-text-left">
    <%= form_with(url: '/employees/held_position', method: 'get', local: true) do |f| %>
      <%= f.label 'Dependency', class: 'label' %>
      <div class="select">
        <%= f.select :order_name, options_for_select(["ASC", "DESC","DEFAULT"]) %>
        <span class="icon is-left">
          <i class="fa fa-filter"></i>
        </span>
      </div>
      <%= f.submit 'Order', class: 'button is-black' %>
    <% end %>
  </div>
  <%= render 'table' %>
  <div class="has-text-left">
    <h5>
      <strong>Number of employees: </strong><%= @employees.count %>
    </h5>
  </div>
</div>

<%= link_to 'New Employee', new_employee_path %>
